<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show',book_path(book.id) %></td>
        <td><%= link_to 'Edit',edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy',book_path(book.id),method: :delete %></td>
      </tr>
    </tbody>
  <% end %>
</table>


<h2>New book</h2>

<%= render 'errors',book: @book %>

<%= form_with model:@book, url:books_path ,method: :post  do |f| %>
  <div class= "title_area">
    <div><%= f.label :title %></div>
    <%= f.text_field :title %>
  </div>

  <div class= "body_area">
    <div><%= f.label :body %></div>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>