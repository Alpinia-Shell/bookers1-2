<%= form_with model:@book, url:books_path ,method: :post  do |f| %>
  <div class= "title_area">
    <div><%= f.label :title %></div>
    <%= f.text_field :title %>
  </div>

  <div class= "body_area">
    <div><%= f.label :body %></div>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>